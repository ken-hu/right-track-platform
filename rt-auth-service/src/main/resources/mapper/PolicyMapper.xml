<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="pers.ken.rt.auth.infrastructure.repository.persistence.mapper.PolicyMapper">

    <resultMap id="BaseResultMap" type="pers.ken.rt.auth.infrastructure.repository.persistence.po.PolicyPO">
        <id property="id" column="id" jdbcType="BIGINT"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="policyDocument" column="policy_document" jdbcType="OTHER"
                typeHandler="com.baomidou.mybatisplus.extension.handlers.JacksonTypeHandler"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
        <result property="versionId" column="version_id" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,create_time,name,
        policy_document,update_time,version_id
    </sql>
    <select id="selectAllByUserId"
            resultType="pers.ken.rt.auth.infrastructure.repository.persistence.po.PolicyPO">
        select *
        from policy
                 left join user_policy_rel
                           on policy.id = user_policy_rel.policy_id
        where user_policy_rel.user_id = #{userId}
    </select>
    <select id="selectAllByRoleId"
            resultType="pers.ken.rt.auth.infrastructure.repository.persistence.po.PolicyPO">
        select *
        from policy
                 left join role_policy_rel rpr on policy.id = rpr.policy_id
        where rpr.role_id = #{roleId}
    </select>
</mapper>
